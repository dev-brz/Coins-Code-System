<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="brz" id="1">
        <createTable tableName="users">
            <column name="username" type="varchar(255)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="authorities">
            <column name="username" type="varchar(255)">
                <constraints nullable="false" foreignKeyName="fk_users_username" references="users(username)"/>
            </column>
            <column name="authority" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="authorities" columnNames="username, authority"/>
    </changeSet>

    <changeSet id="2" author="Arthur">
        <createTable tableName="user_account">
            <column type="int" name="id" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column type="varchar(255)" name="username">
                <constraints nullable="false" unique="true"/>
            </column>
            <column type="varchar(255)" name="firstName"/>
            <column type="varchar(255)" name="lastName"/>
            <column type="varchar(255)" name="email">
                <constraints nullable="false" unique="true"/>
            </column>
            <column type="varchar(255)" name="phoneNumber">
                <constraints nullable="false" unique="true"/>
            </column>
            <column type="int" name="numberOfSends" defaultValue="0"/>
            <column type="int" name="numberOfReceives" defaultValue="0"/>
            <column type="timestamp" name="createdAt" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column type="boolean" name="active" defaultValue="true"/>
            <column type="int" name="sendLimits" defaultValue="0"/>
        </createTable>

        <createIndex tableName="user_account" indexName="user_account_username">
            <column name="username"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
